{
    "manifest_version": 3, 
    "name":"Highlight tool", 
    "description": "Base Level Extension", 
    "version": "1.0",
    "background": {
        "service_worker": "resources/scripts/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["resources/scripts/script.js"],
            "css": ["resources/stylesheets/style.css"]
        }
    ]
    
}